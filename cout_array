/*Заполнение и вывод массива через указатель*/
#include <iostream>
using namespace std;

void display(int *array, int n);
int main()
{
	setlocale(LC_ALL, "Russian");
	
	int num[10];
	cout << "Массив: " << endl;

	for (int i = 0; i < 10; i++) {
		num[i] = i;
	}

	display(num, 10);

	return 0;
}

void display(int *array, int n) {
	while (n > 0) {
		cout << *array << endl;
		n--;
		array++;
	}
}
